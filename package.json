{
    "name": "nestjs-scanloader",
    "version": "2.0.2",
    "description": "nestjs scan & autoload providers and controllers",
    "main": "dist/index.js",
    "types": "dist/index",
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "prepublish": "npm run build",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SirReiva/nestjs-scanloader"
    },
    "keywords": [
        "nestjs",
        "scan",
        "loader"
    ],
    "author": "Reiva",
    "license": "MIT",
    "dependencies": {
        "@nestjs/common": "^8.0.1",
        "fast-glob": "^3.2.7",
        "rxjs": "^7.2.0"
    },
    "devDependencies": {
        "@nestjs/core": "8.0.7",
        "@nestjs/platform-express": "8.0.7",
        "@nestjs/testing": "8.0.7",
        "@types/jest": "27.0.2",
        "@types/node": "^16.9.1",
        "jest": "27.2.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "3.0.2",
        "ts-jest": "^27.0.5",
        "typescript": "4.4.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
